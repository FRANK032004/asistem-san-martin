# ============================================================
# VARIABLES DE ENTORNO PARA TESTING
# Sistema de Asistencias - Instituto San Martín
# ============================================================
# ⚠️ NO usar base de datos de producción para tests

# Base de datos de testing
DATABASE_URL="postgresql://postgres:12345@localhost:5432/instituto_san_martin_test?connect_timeout=60"

# Node environment
NODE_ENV=test

# JWT secrets (diferentes a producción)
JWT_SECRET=test_jwt_secret_for_testing_only
JWT_REFRESH_SECRET=test_refresh_secret_for_testing_only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Puerto del servidor (diferente para no conflictar)
PORT=5001

# Logging
LOG_LEVEL=error
SILENT_TESTS=true

# GPS (valores de prueba)
GPS_PRECISION_METERS=50
GPS_TIMEOUT_SECONDS=30

# Rate limiting (deshabilitado en tests)
RATE_LIMIT_ENABLED=false

# Otros
ENABLE_CORS_ALL=true
FRONTEND_URL=http://localhost:3000
