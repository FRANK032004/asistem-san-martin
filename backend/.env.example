# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
DATABASE_URL="postgresql://usuario:password@localhost:5432/instituto_san_martin"

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# CONFIGURACIÓN JWT
# ========================================
# ⚠️ CRÍTICO: Generar secretos seguros con:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=tu_refresh_secret_super_seguro_aqui
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# CONFIGURACIÓN DE CORS
# ========================================
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# ========================================
# CONFIGURACIÓN DE EMAIL
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion
EMAIL_FROM=noreply@sanmartin.edu.pe

# ========================================
# CONFIGURACIÓN DE ARCHIVOS
# ========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ========================================
# CONFIGURACIÓN DE RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURACIÓN DE GPS
# ========================================
GPS_PRECISION_METERS=50
GPS_TIMEOUT_SECONDS=30
GPS_DEFAULT_LOCATION_LAT=-12.0464
GPS_DEFAULT_LOCATION_LNG=-77.0428

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10mb
LOG_MAX_FILES=5

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_CORS_ALL=false

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_EMAIL_ADMIN=admin@sanmartin.edu.pe

# ========================================
# CONFIGURACIÓN DE SENTRY (MONITOREO)
# ========================================
# ⚠️ Obtén tu DSN en: https://sentry.io/settings/projects/
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
