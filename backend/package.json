{
  "name": "instituto-san-martin-backend",
  "version": "1.0.0",
  "description": "Backend del Sistema de Asistencia - Instituto San Martín",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "npm run db:setup && npm run prisma:seed:if-empty && node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "db:setup": "prisma migrate deploy || prisma db push --accept-data-loss",
    "prisma:push": "prisma db push --accept-data-loss",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed:if-empty": "ts-node prisma/seed-if-empty.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:reset": "prisma migrate reset",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "security:audit": "node scripts/security-audit.js",
    "security:fix": "npm audit fix",
    "security:check": "npm audit && npm outdated",
    "docker:build": "docker build -t asistem-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env asistem-backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "docker:shell": "docker exec -it asistem-backend sh",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "instituto",
    "asistencia",
    "gps",
    "docentes",
    "node",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "Sistema San Martín",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^10.22.0",
    "@sentry/profiling-node": "^10.22.0",
    "@types/bcrypt": "^6.0.0",
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.5",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "uuid": "^9.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.3",
    "@types/compression": "^1.7.3",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.9",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.22.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
